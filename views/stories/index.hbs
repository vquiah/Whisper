<h1 class="text-teal-500 text-3xl my-5">Whispers</h1>
<div class="row ">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card ">
                <div class="card-image">
                   {{{editIcon user ../user _id}}} 
                </div>
                <div class="card-content center-align bg-teal-500"><h5 class="underline decoration-double decoration-blue text-3xl ">{{title}}</h5>
                <p >{{stripTags (truncate body 150)}}</p>
                <br>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
                </div>
                <div class="card-action center-align">
                    <a href="/stories/{{_id}}" class="btn bg-teal-500">Read More</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No whispers to display</p>
    {{/each}}
</div>

